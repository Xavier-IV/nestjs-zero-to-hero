{
  "name": "nestjs-zero-to-hero",
  "version": "1.0.0",
  "description": "A monorepo for our NestJS, from Zero to Hero series",
  "scripts": {
    "format": "prettier --write \"services/**/*.ts\" \"services/**/test/**/*.ts\"",
    "lint": "eslint \"services/**/{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "service:product": "cd services/product && npm run start:dev",
    "service:notification": "cd services/notification && npm run start:dev"
  },
